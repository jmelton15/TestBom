pipeline {
    agent any

    stages {
        stage("Build and Run") {
            parallel {
                stage('RunScript_1') {
                    steps {
                        echo 'Running cdx server script....'
                        bat 'cmd.exe'
                        bat 'python python2.py'
                    }
                }
                stage('RunScript_2') {
                    steps {
                        echo 'Running SBOM Script....'
                        sh 'python sbom_script.py'
                    }
                }
            }
        }
    }
}